{
  "name": "nodejs_boilerplate",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8",
  "description": "Ecommerce + Content monorepo (NestJS, Prisma, BullMQ)",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*",
    "prisma"
  ],
  "scripts": {
    "dev:api": "pnpm --filter @app/api start:dev",
    "dev:worker": "pnpm --filter @app/worker start:dev",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "build": "pnpm -r build",
    "format": "pnpm prettier --write ."
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.27",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "prisma": "5.22.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/client": "5.22.0"
  }
}
