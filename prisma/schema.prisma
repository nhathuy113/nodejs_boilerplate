generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model Product {
  id        String    @id @default(uuid())
  name      String
  createdAt DateTime  @default(now())

  variants  Variant[]
}

model Variant {
  id        String   @id @default(uuid())
  productId String
  sku       String   @unique
  price     Int
  stock     Int      @default(0)

  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
}